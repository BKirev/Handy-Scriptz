// To leverage browser cache in your Firebase app just edit the firebase.json like in my example bellow.
{"hosting": 
  {"public": "build",
        "headers": [ {
          "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
          "headers" : [ {
            "key" : "Access-Control-Allow-Origin",
            "value" : "*"
          } ]
        }, {
          "source" : "**/*.@(js|css)",
          "headers" : [ {
            "key" : "Cache-Control",
            "value" : "max-age=604800"
          } ]
        }, {
          "source" : "**/*.@(jpg|jpeg|gif|png)",
          "headers" : [ {
            "key" : "Cache-Control",
            "value" : "max-age=604800"
          } ]
        }, {
          "source" : "404.html",
          "headers" : [ {
            "key" : "Cache-Control",
            "value" : "max-age=300"
          } ]
        } ]
  }
}